<style>
  #content{
  	margin-top: 0;
  }
</style>
<div id="collectionpage">
  {% paginate collections by 12 %}
  
  {% if collections.size > 0 %}
  
  
  <div id="product-loop" class="desktop-12 mobile-3" style="margin-top: 0">
    {% for collection in collections %}
    
    <div class="homepage-promo desktop-12 mobile-3{% cycle ' first', '', '', ' last' %}" id="prod-{{ product.id }}" data-alpha="{{ product.title }}" data-price="{{ product.price }}">          
      <a href="{{ collection.url }}" title="{{ collection.title }}">
        <div class="collection-image">

            {% if collection.image %}
            {{ collection.image.src | collection_img_url: '2048x2048' | img_tag: collection_title }}
            {% else %}
            {{ collection.products.first.featured_image | product_img_url: '2048x2048' | img_tag: collection_title }}
            {% endif %}    
        </div>


          <div class="caption">

            <div><h3>{{ collection.title }}</h3></div>


        </div>
      </a>
    </div>
    
    
    {% endfor %}
  </div>
  
  
  {% else %}
  <p>{{ 'collections.general.no_matches' | t }}</p>
  {% endif %}
  
  <div class="clear"></div>
  
  {% include 'pagination' %}

  
  {% endpaginate %}
</div>


