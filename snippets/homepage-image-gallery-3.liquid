{% assign grid = 0 %}
{% if settings.promo9 %}{% assign grid = grid | plus: 1 %}{% endif %}
{% if settings.promo10 %}{% assign grid = grid | plus: 1 %}{% endif %}
{% if settings.promo11 %}{% assign grid = grid | plus: 1 %}{% endif %} 
{% if settings.promo12 %}{% assign grid = grid | plus: 1 %}{% endif %}   
{% if grid > 0 %}      
<section class="homepage-section homepage-gallery">
  <article class="row">
    {% if settings.homepage_gallery3_fw %}<div class="row">{% endif %}

    {% assign promo = 'promo9' %}
    {% if settings.promo9 %}        
    <div class="homepage-promo desktop-{{ 12 | divided_by: grid }} {% if grid >= 2 %}omega{% endif %} mobile-3">
      {% include 'homepage_promo' %}
    </div>
    {% endif %}

    {% assign promo = 'promo10' %}
    {% if settings.promo10 %}  
    <div class="homepage-promo desktop-{{ 12 | divided_by: grid }} {% if grid >= 1 %}alpha{% endif %} {% if grid > 2 %}omega{% endif %} mobile-3">
      {% include 'homepage_promo' %}
    </div>
    {% endif %}        

    {% assign promo = 'promo11' %}
    {% if settings.promo11 %}  
    <div class="homepage-promo desktop-{{ 12 | divided_by: grid }} {% if grid >= 2 %}alpha{% endif %} {% if grid > 3 %}omega{% endif %} mobile-3">
      {% include 'homepage_promo' %}
    </div>
    {% endif %}

    {% assign promo = 'promo12' %}
    {% if settings.promo12 %}  
    <div class="homepage-promo desktop-{{ 12 | divided_by: grid }} {% if grid >= 3 %}alpha{% endif %} mobile-3">
      {% include 'homepage_promo' %}
    </div>
    {% endif %}      

    {% if settings.homepage_gallery3_fw %}</div>{% endif %}
  </article>
</section>
{% endif %}
<div class="clear"></div>
