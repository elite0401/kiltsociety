/* #Navigation
================================================== */
.navigation { 
  border-bottom: {{ settings.nav_border_size }} solid {{ settings.nav_border_color }};
  background: {{ settings.navigation }}; 
}

ul.nav {
  list-style: none;
  text-align: center;
  line-height: 40px;
  position: relative;
  margin-bottom: 0;
}

ul.nav li {
  display: inline-block;
  vertical-align: middle;
}

ul.nav li:hover a {
  color: {{ settings.nav_hover_link_color }};
  background: {{ settings.nav_hover_color }};
}

ul.nav li a {
  font-family: {{ settings.navigation-font }};
  font-size: {{ settings.nav_size }};
  font-weight: {{ settings.nav_weight }};
  text-transform: {{ settings.navigation-transform }};  
  color: {{ settings.nav_color }};
  display: block;
  padding: 0 10px;
  letter-spacing: 1px;
}

ul.nav li a:hover {
  background: {{ settings.nav_hover_color }};
  color: {{ settings.nav_hover_link_color }};
  text-decoration: none;
}

ul.nav li.dropdown ul.submenu {
  display: none;
  background: {{ settings.dropdown_background_color }}! important;
  float: left;
  position: absolute;
  top: 40px;
  z-index: 25;
  margin: 0;
  padding: 10px 0;
  border: 1px solid {{ settings.dotted_color }};  
  border-top: 0;
}

ul.nav li.dropdown > a:after {
  font-family: 'FontAwesome'; 
  content: "\f107";
  margin-left: 10px;
}

ul.nav li:hover ul.submenu {
  display: block;
  background: {{ settings.dropdown_background_color }}! important;
}

ul.nav li ul.submenu li{
  background: {{ settings.dropdown_background_color }};
  color: {{ settings.nav_dropdown_color }};
  min-width: 180px;
  line-height: 20px! important;
  text-align: left;
  display: block;
  clear: left;  
  white-space: nowrap;
}

ul.nav li ul.submenu li:hover {
  background: {{ settings.dropdown_hover_background_color }};
}

ul.nav li ul.submenu li a:hover {
  color: {{ settings.dropdown_hover_link_color }};
  background: {{ settings.dropdown_hover_background_color }};
}

ul.nav li ul.submenu li a{
  text-align: left;
  font-size: {{ settings.dropdown-font-size }};
  padding-left: 15px;
  color: {{ settings.nav_dropdown_color }};
  font-weight: normal! important;  
  text-transform {{ settings.dropdown-transform }}! important;
  letter-spacing: initial;
  font-family: {{ settings.font }};
}

ul#nav li ul.submenu li.nest:after {
  position: absolute;
  top: 8px;
  right: 10px;
  font-family: 'FontAwesome'; 
  content: "\f105";
}

.submenu li.nest:hover > ul.nested {
  display: block; 
}

.nested {
  display: none;
  padding: 10px 0;
  position: absolute;
  left: 100%;
  top: 0;
  background: {{ settings.dropdown_background_color }};
  border: 1px solid {{ settings.dotted_color }};   
}

.rightarrow {
  position: absolute;
  right: 10px;
  top: 10px;
  font-size: 11px;
  color: {{ settings.dropdown-link-color }};
}

