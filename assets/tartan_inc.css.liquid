/* New popup design */

.modal-content .p-list .p-img span:before{width:100%;height:100%;}
.modal-content .sa_tartan_view_image .p-img span::before{height:100%;width:100%;}
.modal-content .sa_tartan_view_detail{padding-left:30px;}
.modal-content .sa_btn_container img{float:left;padding-right:10px;padding-top:4px;}

#tartan_modal_popup .modal-header{padding:0px;}
.tartan-search {
  height:400px;
}

.sa_btn_container{ 
  left: 0;
  padding: 10px;
  position: absolute;
  top: 0;
  width: 100%;
}
.sa_btn_container span{
  color: #fff;
  font-size: 28px;
  cursor:pointer;
  display:none;
}

.sa_btn_container .exit{
  background: transparent;
  float: right;
  padding: 0;
  width: auto;
}

.p-list li .adds{
  color: #777;
  font-size: 14px;
  margin-top: 10px;
  text-align: center;
  font-weight: normal;
  width:100%;
}

.p-list li .money{
  display: inline-block !important;
  margin-left: 5px;
}

.sa_tartan_view_image .p-img span::before{
  height: calc(100% - 0%);
  width: calc(100% - 0%);
}

.f_left{float:left}
.f_right{float:right}

.v_top{vertical-align:top}

.modal-xl{ width:690px;}
.modal-content{ border-radius:0;}

.product_tartan{display:inline-block;float:left;}
.product_tartan table td{border:none;font-family:"Open sans";font-weight:500;padding:0px;}
.product_tartan table td span{color:#777;font-weight:bold;}
.modal_loverlay{background:#fff none repeat scroll 0 0;bottom:0;display:none;left:0;opacity:.8;position:absolute;right:0;top:0;z-index:5555}
.modal_loverlay .loading{left:50%;margin:-28px 0 0 -25px;position:absolute;top:50%}
.disabled{opacity:0}
.tartan_price .money{font-size:20px!important}
#tartan_modal_popup{z-index:5555555; padding-right:0 !important;}

#tartan_modal_popup .modal-header{ border-bottom:none;}

.sa_tartan_view_image{float:left;height:400px;margin-top:4px;width:60%;}
.sa_tartan_view_image img{width:auto}
.sa_tartan_view_detail{float:left;height:404px;padding-left:20px;width:40%; font-family:verdana; font-weight:400; font-size:13px;}
.sa_tartan_view_detail ul{height:330px;list-style:outside none none;text-align:left}
.sa_tartan_view_detail > div{vertical-align:bottom}
.sa_tartan_view_detail > div p{text-align:right; color:#000;}

#product-description .product-price{font-family:"open sans";color:#8e8e8e;font-weight:bold;}
.select_option{margin:35px 0 0;}
.select_option .select_btn{text-transform:uppercase;width:200px !important;border-radius:0;font-size: 20px;}

.fix_price_cart{width:1200px;background:#d4d2d3;z-index:9999;transition: all .5s ease}
.fix_price_cart .add{margin:14px 0;padding:12px 17px;width:auto !important;float:right;margin:14px 43px 14px 0;text-transform:uppercase;border-radius:0;font-size:12px;}
.fix_price_cart .add.disable{background:#777576 !important;}
.fix_price_cart .price_div{float:right;color:#000;text-align:center;text-transform:uppercase;padding:15px 25px 0;font-size:14px;line-height:20px;}
.fix_price_cart .price_div .product-price{font-weight:bold;font-size:16px;}
.fix_price_cart.fixed {position: fixed;bottom: 0;transition: all .5s ease;}

#shopify-product-reviews{margin:30px 0 13px;}

#product-photos{margin:0 0 20px;}
#product-photos > div{width:100%;float:left;}
#product-photos a,.product-photos a{float:left;margin:0 0 10px;height:115px;display:flex;align-items:center;justify-content:center;}
#product-photos a img,.product-photos a img{width:100%;margin:0 5px 0;max-height:100%;}
#product-photos .main_bigimage{display:flex;align-items:center;justify-content:center;}
#product-photos .main_bigimage img{max-height:520px;}

.youtube_video{width:613px;height:310px;display:inline-block;margin:0 0 20px;}
.fancybox-overlay{z-index:9999;}
.fancybox-opened{z-index:99999;}
.fancybox-close{bottom:10px;font-weight:bold;font-size:30px;line-height:28px;right:5px;top:inherit;}
.fancybox-close:hover{text-decoration:none;}
.fancybox-title-inside-wrap{margin-right:15px;}
.outfit_div{width:100%;float:left;background:#2a2a2a;border-bottom:1px solid #fff;}
.outfit_div .main_of{display:flex;justify-content:center;}
.outfit_div .oft_coll_slide .img_div{width:100%;max-width:100%;min-height:325px;}
.outfit_div .oft_coll_slide .oft_coll_no_img{width:1600px;}

.outfit_div .img_div{width:50%;max-width:50%;text-align:center;align-items:center;display:flex;justify-content:center;background:#fff;}
.outfit_div .content_div{max-width:50%;width:50%;padding:0 60px 0 40px;min-height:325px;}
.outfit_div .img_div a{width:100%;float:left;}
.outfit_div .outfit_img{max-height:325px;cursor:pointer;width:100%; object-fit: cover; object-position: center center; }
.outfit_desc {padding-bottom:30px;}
.outfit_desc .title{width:100%;display:inline-block;text-transform:uppercase;color:#fff;margin:15px 0;font-size:36px;}
.outfit_desc .detail{width:100%;display:inline-block;text-transform:uppercase;color:#fff;font-size:18px;}
.outfit_desc .detail .of_info{background: #fff;border-radius: 50%;font-size: 10px;font-weight: bold; padding: 0 5px;position: relative;text-transform: none;top: -2px;left:1px;vertical-align: super;}
.outfit_desc .detail .of_info:hover{text-decoration:none;}
.outfit_desc .price{width:100%;display:inline-block;text-transform:uppercase;color:#fff;font-size:18px;margin:7px 0 0;}
.outfit_desc .tartan_inc{width:100%;display:inline-block;background:#fff;margin:25px 0 0;padding:15px;}
.outfit_desc .outfit_dropdown{text-transform:uppercase;font-weight:bold;width:100%;display:inline-block;margin:15px 0 0;padding:1px 5px;}
.outfit_slider{position:relative;cursor:move;}
.outfit_slider .info_text{position:absolute;color:#fff;bottom:5px;right:58px;text-transform:uppercase;font-size:14px;width:45%;text-align:right;}
.oft_coll_slide .img_div a:before{content:'';left:0;top:0;position:absolute;height:100%;width:100%;background:rgba(0,0,0,0.4);}
.outfit_slider .oft_coll_slide .info_text{font-size:48px;width:100%;top:50%;margin-top:-22px;left:0;padding:0 30px;line-height:48px;text-align:center;position:absolute;}

.outfit_slider .slick-track{position:inherit;}
.slick-initialized .slick-slide{position:inherit;}

.outfit_desc div.select .selector-wrapper select{margin:15px 0 0;width:100%;}

.change_tartan img.sa_tselect_loading{width:35px;display:none;margin:-15px;position:absolute;top:50%;left:50%;}
.open_loading  img.sa_tselect_loading{width:35px;display:none;margin:-15px;position:absolute;top:0;left:0}
.product_tartan td img.sa_inline{width:20px!important;display:none;margin:0!important;position:relative!important}
.product_tartan img.sa_inline{width:20px!important;display:none;margin:0!important;position:relative!important}
.open_remove_db{position:absolute;}
.open_db{left:20px;position:relative;top:30px;}

.product_tartan_options{width:100%;float:left;margin:0px;}
.product_tartan_options li{display:inline-block;margin-bottom:10px;text-align:center;vertical-align:top;width:90px;}
#product-description label{float:none;margin:0 auto;}
.product_tartan_options li > label{text-align:center;height:70px;width:70px;}
.product_tartan_options input[name='tartan_radio']{display:none}
.product_tartan_options li > label img{border:1px solid #e1e1e1;cursor:pointer;margin-bottom:4px;padding:2px;height:100%;width:100%}
.product_tartan_options input[name='tartan_radio']:checked + label > img{border:2px solid red!important}

#product-description .product-add{display:inline-block;float:left;width:100%;}
#product-description h1{border:none;}

.change_tartan_div.change_tartan{display:inline-flex;}
a.remove_tartan, a.change_tartan{position:relative;color:#000;font-family:montserrat;font-size:13px;height:auto;}
.product_tartan table td span.select_tartan{display:inline-block;width:100%;font-family:montserrat;position:relative;top:-37px;left:20px;font-weight:500;color:#333;}
.open_tartan{display:inline-block;position:relative;bottom:-37px;left:20px;}
.change_tartan_div{position:relative;display:flex;height:114px;align-items:center;justify-content:center;}
.outfit_div .slick-prev, .outfit_div .slick-next{opacity:0.4;}
.img_border{position:relative;background:#aeaeae;height:114px;width:114px;}
.img_border img{display:none;}
.img_border:before, .select_img_border:before{
  border: 6px solid transparent;
  border-image: url({{ 'img-border.png' | asset_url }}) 10 10 10 10 round round;    
  -webkit-border-image: url({{ 'img-border.png' | asset_url }}) 10 10 10 10 round round;
  -moz-border-image: url({{ 'img-border.png' | asset_url }}) 10 10 10 10 round round;    
  content: "";
  height: 100%;
  position: absolute;
  width: 100%;
}
.select_img_border{position:relative;height:114px;width:114px;display:flex;}  

#tartan_modal_popup .modal-body h3{ font-size:1.4em; margin:0.3em 0;text-transform:uppercase;}

@media only screen and (min-width:992px) and (max-width:1199px)
{
  #product-photos .main_bigimage img{max-height:490px;}
  .youtube_video{width:490px;height:255px;}
  .fix_price_cart{width:960px;}
  .outfit_div .img_div{width:50%;}
  .outfit_div .content_div{width:50%;}
  .outfit_div .outfit_img{max-height:325px;}   
  .outfit_div .img_div a{height:325px;}
  .outfit_div .oft_coll_slide .oft_coll_no_img{height:100%;}
}

@media only screen and (min-width:981px) and (max-width:1199px)
{
  .modal-dialog{width:950px;}
  .outfit_slider .oft_coll_slide .info_text{font-size:38px;}
}
@media only screen and (min-width:768px) and (max-width:980px)
{
  .modal-dialog{width:750px;}
  .outfit_slider .oft_coll_slide .info_text{font-size:30px;line-height:32px;margin-top:-12px;}
}

@media only screen and (min-width:768px) and (max-width:991px)
{  
  #product-photos .main_bigimage img{max-height:450px;}
  .youtube_video{width:367px;height:190px;}
  .fix_price_cart{width:720px;}
  .outfit_div .outfit_img{max-height:325px;}
  .outfit_desc .title{font-size:26px;}
  .outfit_desc .price{font-size:16px;margin:10px 0 0;}
  .outfit_desc .detail{font-size:16px;}
  .outfit_slider .info_text{font-size:13px;}
  .outfit_div .content_div{padding:0 40px 0 30px;min-height:325px;}
  .outfit_div .oft_coll_slide .img_div{min-height:325px;}
  .outfit_desc .tartan_inc{padding:15px 15px 2px 10px;}
  .outfit_slider .info_text{right:40px;}
  .outfit_div .img_div a{height:325px;}
  .outfit_div .oft_coll_slide .oft_coll_no_img{height:100%;}
  
  .p-list li:nth-child(4n+1){clear:none;}
  .p-list li:nth-child(3n+1){clear:left;}
}
@media screen and (max-width:767px) {
  .modal-xl{ width:auto;}
  #mobile-product{display:none !important;}
  .change_tartan img.sa_tselect_loading{ margin:-12px 55px; left:0; right:0;}
  .youtube_video{width:368px;height:205px;}
  .fix_price_cart{width:720px;}
  .fix_price_cart .price_div{padding-top:11px;padding-bottom:5px;}
  .fix_price_cart input.add{margin:11px;float:right;font-size:12px;}
  .outfit_div .row{margin:0;}
  .outfit_div .outfit_img{max-height:300px;}
  .outfit_slider{padding:0 26px;}
  .outfit_desc .title{font-size:26px;}
  .outfit_desc{padding-bottom:5px;}
  .outfit_desc .detail, .outfit_desc .price, .outfit_desc .outfit_dropdown{font-size:13px;}
  .outfit_slider .info_text{font-size:11px;right:20px;float:right;}
  .outfit_slider .oft_coll_slide .info_text{font-size:20px;line-height:20px;}  
  .outfit_div .content_div{padding:0 15px 0 40px;}

  .fix_price_cart.fixed{left:0;width:100%;}
  .tartan-search{height:inherit;}
}
@media screen and (max-width:740px) {
  /*.shifter-enabled .shifter-navigation{display:none;}*/
  .zoomContainer{display:none !important;}
  
  .sa_tartan_view_image{ width:100%; height:inherit;}
  .sa_tartan_view_image img{ height:auto !important; width:auto !important;}
  .sa_tartan_view_detail{ width:100%; height:inherit; padding-left:0; padding-top:15px;}
  .sa_tartan_view_detail ul{ height:inherit;}

  /*#product-photos > div{display:none;}*/
  #productnav h4{text-align:center;}
  div#product-description{text-align:center;}
  .product_tartan_options li{display:inline-block;}
  .product_tartan{width:100%;}
  .product_tartan table{max-width:300px;margin:0 auto;width:100%;}
  .select_option{text-align:center;}  

  .youtube_video{width:100%;}
  .fix_price_cart{width:100%;}
  #product-description h1{font-size:26px;}
  #product-price{font-size:16px;}  
  .tartan_desc, .tartan_desc p{font-size:13px;}
  .gridlock .outfit_div .row{margin:0;}

  .outfit_desc div.select{margin:0 0 15px;}
  .outfit_slider .slick-prev::before, .outfit_slider .slick-next::before{display:none;}
  .outfit_slider{padding:0;}
  .outfit_div .main_of{display:inline-block;width:100%;float:left;}
  .outfit_div .img_div{width:100%;max-width:100%;}
  .outfit_div .content_div{width:100%;max-width:100%;padding:0 22px;min-height:inherit;}
  .outfit_div .oft_coll_slide .img_div{min-height:inherit;}
  a.remove_tartan, a.change_tartan{font-size:12px;margin:0;float:left;} 

  .outfit_slider .info_text{width:100%;position:inherit;}
  .modal-content .p-list .p-name{margin-bottom:22px;}
}
@media screen and (max-width:479px){
  #product-description h1{font-size:20px;}
  .youtube_video{height:168px;}
  .outfit_div .outfit_img{max-height:200px;}
  .outfit_desc .tartan_inc{padding:10px 5px 5px;}
  .outfit_desc .title{font-size:20px;}
  .product_tartan table td span.select_tartan{left:10px;font-size:11px;}
  .product_tartan table{max-width:275px;}
  .open_tartan{left:10px;}  
  .open_remove_db span{display:none;}
  a.remove_tartan, a.change_tartan{margin:0 0 2px;}
}

.outfit_desc span{color:#fff;}
.product_tartan_options span{color:#000;}
.fix_price_cart .ajaxified-cart-feedback{display:inline;}
.fix_price_cart .add{float:unset;display:inline-block;}
.fix_price_cart .price_div{display: inline-block; float: unset; vertical-align: top;}
.fix_price_cart {text-align:right;}

.select_option .select_btn:hover,.tartan_addto_cart:hover {
  background: #000000 none repeat scroll 0 0 !important;
  color: #ffffff !important;
}

.pagination{position:relative;}
.oft_add_opacity{opacity:0.6;}